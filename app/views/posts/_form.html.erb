<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @today.nil? %>
    <div><b>today's theme is not found...</b></div>
  <% else %>
    <div class="field">
      <%= f.label :theme, 'お題' %>:
      <%= @today.body %>
      <%= f.hidden_field :theme_id, :value => @today.id %>
    </div>

    <% if @already_post.nil? %>
      <div class="field">
        <%= f.label :body, 'あなたの皮算用を入力しましょう' %><br />
        <%= f.text_area :body, :size => '40x3' %>
      </div>
      <%= f.hidden_field :user_id, :value => @user.id %>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% else %>
        <%= f.label :body %><br />
        <b>"<%= @already_post.body %>"</b><br />
        Today's post already exist...
    <% end %>

  <% end %>
<% end %>
