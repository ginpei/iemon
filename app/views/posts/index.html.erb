<h1>Listing posts</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Theme</th>
    <th>Body</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.theme.target_date unless post.theme.nil? %></td>
    <td><%= post.theme.body  unless post.theme.nil? %></td>
    <td><%= post.body %></td>
  </tr>
<% end %>
</table>

<br />
<%= paginate @posts %>

<%= link_to 'New Post', new_post_path %>
