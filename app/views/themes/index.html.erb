<div id="content">
    <h1>過去のお題</h1>
    <ul>
      <% @themes.each do |theme| %>
    	<li>
        	<span><%= theme.target_date %></span>お題: <%= link_to theme.body, theme %>
            <div class="post">回答数: <%= theme.posts.count %></div>
		</li>
  <% end %>
    </ul>
<%= paginate @themes %>
</div>
